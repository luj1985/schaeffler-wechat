- error = @question.errors.include?(:question)
%fieldset.control-group{:class => error ? 'has-error' : ''}
  =f.label :question, :class => 'control-label'
  .controls
    ~f.text_area :question, :class => 'form-control input-large input-with-feedback', :autofocus => true
    %span.help-inline=f.error_message_on(:question, :class => 'text-error') if error
