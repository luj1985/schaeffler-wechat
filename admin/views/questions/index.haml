%ul.nav.nav-tabs
  %li.active=link_to tag_icon(:list, pat(:list)), url(:questions, :index)
  %li=link_to tag_icon(:plus, pat(:new)), url(:questions, :new)

.tabs-content
  %table#list.table.table-striped.table-hover.table-condensed
    %thead
      %tr
        %th.header.list-menu
          .dropdown
            %a.list-menu-toggle.dropdown-toggle{:href => '#', :'data-toggle' => :dropdown}
              =tag_icon :magic
              %span.caret
            %ul.list-menu.dropdown-menu{:role => :menu}
              %li.list-menu-wrapper=link_to tag_icon(:check, pat(:select_all)), '#', :id => 'select-all', :class => 'list-menu-link'
              %li.list-menu-wrapper.list-menu-wrapper-disabled
                =link_to tag_icon(:'check-empty', pat(:deselect_all)), '#', :id => 'deselect-all', :class => 'list-menu-link list-menu-link-disabled'
              %li.list-menu-divider.divider
              %li.list-menu-wrapper.list-menu-wrapper-disabled
                =link_to tag_icon(:trash, pat(:delete_selected)), '#', :id => 'delete-selected', :class => 'list-menu-link list-menu-link-disabled'
                .list-menu-popover-delete-selected.popover.right
                  .arrow
                  %h3.popover-title=pat(:delete_selected_title)
                  .popover-content
                    = form_tag url(:questions, :destroy_many), :method => :delete do
                      =hidden_field_tag :question_ids, :'data-delete-many-ids' => true
                      =submit_tag pat(:delete), :class =>'list-menu-popover-delete-selected-btn btn btn-danger btn-small'
                      .btn.btn-default.btn-small.cancel=pat(:cancel)
        %th.header= mat(:question, :id)
        %th.header= mat(:question, :question)
        %th.header= mat(:question, :a)
        %th.header= mat(:question, :b)
        %th.header= mat(:question, :c)
        %th.header= mat(:question, :d)
        %th.header= mat(:question, :correct)
        %th.header= mat(:question, :created_at)
        %th.header= mat(:question, :updated_at)
        %th.header.list-row-action-header

    %tbody
      -@questions.each do |question|
        %tr.list-row
          %td.list-column.list-selectable
            =check_box_tag 'question_ids[]', :value => question.id, :class => 'list-selectable-checkbox'
          %td.list-column=question.id
          %td.list-column=question.question
          %td.list-column=question.a
          %td.list-column=question.b
          %td.list-column=question.c
          %td.list-column=question.d
          %td.list-column=question.correct
          %td.list-column=time_ago_in_words question.created_at
          %td.list-column=time_ago_in_words question.updated_at
          %td.list-column.list-row-action
            .list-row-action-wrapper
              =link_to tag_icon(:edit), :href => url(:questions, :edit, :id => question.id), :rel => :tooltip, :title => "#{pat(:edit)} question", :class => 'list-row-action-wrapper-link'
              =link_to tag_icon(:trash), :rel => :tooltip, :title => "#{pat(:delete)} question", :class => 'list-row-action-delete-one list-row-action-wrapper-link'
              .popover.list-row-action-popover-delete-one.left
                .arrow
                %h3.popover-title=pat(:delete, :model => "question")
                .popover-content
                  = form_tag url(:questions, :destroy, :id => question.id), :method => :delete do
                    =submit_tag pat(:delete), :class =>'list-row-action-popover-delete-one-btn btn btn-danger btn-small'
                    .btn.btn-default.btn-small.cancel=pat(:cancel)
