%ul.nav.nav-tabs
  %li.active=link_to tag_icon(:list, pat(:list)), url(:lotteries, :index)
  %li=link_to tag_icon(:plus, pat(:new)), url(:lotteries, :new)

.tabs-content
  %table#list.table.table-striped.table-hover.table-condensed
    %thead
      %tr
        %th.header.list-menu
          .dropdown
            %a.list-menu-toggle.dropdown-toggle{:href => '#', :'data-toggle' => :dropdown}
              =tag_icon :magic
              %span.caret
            %ul.list-menu.dropdown-menu{:role => :menu}
              %li.list-menu-wrapper=link_to tag_icon(:check, pat(:select_all)), '#', :id => 'select-all', :class => 'list-menu-link'
              %li.list-menu-wrapper.list-menu-wrapper-disabled
                =link_to tag_icon(:'check-empty', pat(:deselect_all)), '#', :id => 'deselect-all', :class => 'list-menu-link list-menu-link-disabled'
              %li.list-menu-divider.divider
              %li.list-menu-wrapper.list-menu-wrapper-disabled
                =link_to tag_icon(:trash, pat(:delete_selected)), '#', :id => 'delete-selected', :class => 'list-menu-link list-menu-link-disabled'
                .list-menu-popover-delete-selected.popover.right
                  .arrow
                  %h3.popover-title=pat(:delete_selected_title)
                  .popover-content
                    = form_tag url(:lotteries, :destroy_many), :method => :delete do
                      =hidden_field_tag :lottery_ids, :'data-delete-many-ids' => true
                      =submit_tag pat(:delete), :class =>'list-menu-popover-delete-selected-btn btn btn-danger btn-small'
                      .btn.btn-default.btn-small.cancel=pat(:cancel)
        %th.header= mat(:lottery, :id)
        %th.header= mat(:lottery, :name)
        %th.header= mat(:lottery, :tel)
        %th.header= mat(:lottery, :serial)
        %th.header= mat(:lottery, :crypted_serial)
        %th.header= mat(:lottery, :user_id)
        %th.header= mat(:lottery, :status)
        %th.header.list-row-action-header

    %tbody
      -@lotteries.each do |lottery|
        %tr.list-row
          %td.list-column.list-selectable
            =check_box_tag 'lottery_ids[]', :value => lottery.id, :class => 'list-selectable-checkbox'
          %td.list-column=lottery.id
          %td.list-column=lottery_name(lottery)
          %td.list-column=lottery.tel
          %td.list-column=lottery.serial
          %td.list-column=lottery.crypted_serial
          %td.list-column=lottery.user_id
          %td.list-column=lottery_status(lottery)
          %td.list-column.list-row-action
            .list-row-action-wrapper
              =link_to tag_icon(:edit), :href => url(:lotteries, :edit, :id => lottery.id), :rel => :tooltip, :title => "#{pat(:edit)} lottery", :class => 'list-row-action-wrapper-link'
              =link_to tag_icon(:trash), :rel => :tooltip, :title => "#{pat(:delete)} lottery", :class => 'list-row-action-delete-one list-row-action-wrapper-link'
              .popover.list-row-action-popover-delete-one.left
                .arrow
                %h3.popover-title=pat(:delete, :model => "lottery")
                .popover-content
                  = form_tag url(:lotteries, :destroy, :id => lottery.id), :method => :delete do
                    =submit_tag pat(:delete), :class =>'list-row-action-popover-delete-one-btn btn btn-danger btn-small'
                    .btn.btn-default.btn-small.cancel=pat(:cancel)
